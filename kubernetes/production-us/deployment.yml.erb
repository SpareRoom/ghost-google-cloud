---
<%= partial "ingress", name: "ghost-blog-ingress", service: "ghost-blog", port: 80, ssl_cert_secret: "spareroomcomcert2016" %>
---
<%= partial "service", name: "ghost-blog", app: "ghost-blog" %>
---
apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: ghost-blog
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: ghost-blog
    spec:
      containers:
      - <%= partial "app", image: "eu.gcr.io/spareroom-blogs/ghost-blog-us", url: "http://blog.spareroom.com", db: "ghost-spareroom-us", assets_bucket: "us-assets-blogs-production-spareroom", email_from: "no-reply@spareroom.com", email_region: "eu-west-1" %>
      - <%= partial "sqlproxy", proxy_ver: "1.09", instances: "spareroom-blogs-production:europe-west2:ghost=tcp:3306" %>
      volumes: <%= partial "volumes" %>
